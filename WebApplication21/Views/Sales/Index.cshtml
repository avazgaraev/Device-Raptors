@using WebApplication21.Models
@model List<salemove>
@{
    ViewBag.Title = "Index";
    Layout = "~/Shared/_LayoutAdmin.cshtml";
}

<table id="tbl1" class="table table-bordered">
    <thead>

        <tr>
            <th>Id</th>
            <th>Product</th>
            <th>Customer</th>
            <th>Count</th>
            <th>Price</th>
            <th>All price</th>
            <th>Date</th>
            <th>Update</th>
            <th>Details</th>
        </tr>
    </thead>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.saleid</td>
            <td>@item.products.productsname</td>
            <td>@item.customer.customername @item.customer.customersurname</td>
            <td>@item.salecount</td>
            <td>@item.saleprice</td>
            <td>@item.saleallprice</td>
            <td>@item.saledate</td>
            <td><a href="/Sales/updsalepage/@item.saleid" class="btn btn-primary"><i class="fas fa-fan"></i></a></td>
            <td><a href="/Sales/saledetail/@item.saleid" class="btn btn-info"><i class="fas fa-info"></i></a></td>

        </tr>
    }
</table>
<a href="/Sales/newsale" class="btn btn-info">New sale</a>

<link href="~/Content/bootstrap.css" rel="stylesheet" />

<script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>

