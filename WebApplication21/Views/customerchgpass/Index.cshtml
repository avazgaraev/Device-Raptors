@using WebApplication21.Models
@model List<customer>

@{
    ViewBag.Title = "Index";
    Layout = "~/Shared/layoutviews.cshtml";
}

<section class="pt-150 pb-150">
    <div class="container">
        <div class="row">
            <div class="col-lg-10 m-auto">
                <div class="row">
                    <div class="col-md-4">
                        <div class="row">
                            <div class="col-4">
                                <div class="profile-sidebar crop-avatar">
                                   
                                    
                                </div>
                            </div>
                            <div class="col-8">
                                <div class="profile-usertitle-name pt-2">
                                    @foreach (var item in Model)
                                    {

                                        <strong>@item.customername @item.customersurname </strong>
                                        <p><small>@HttpContext.Current.User.Identity.Name</small></p>
                                    }
                                </div>
                            </div>
                        </div>
                        <hr>
                        <div class="dashboard-menu">
                            <ul class="nav flex-column">
                                <li class="nav-item">
                                    <a class="nav-link
                                                  " href="~/customerpanel/Index" aria-controls="dashboard" aria-selected="false">
                                        <i class="fa fa-atom mr-15" aria-hidden="true"></i>
                                        Overview
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link
                                                " href="~/customerprof/Index" aria-controls="dashboard" aria-selected="false">
                                        <i class="fa fa-user-edit mr-15" aria-hidden="true"></i>
                                        Profile
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link
                                                " href="~/customermessage/Index" aria-controls="dashboard" aria-selected="false">

                                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-chat-left-text mr-15" viewBox="0 0 16 16">
                                            <path d="M14 1a1 1 0 0 1 1 1v8a1 1 0 0 1-1 1H4.414A2 2 0 0 0 3 11.586l-2 2V2a1 1 0 0 1 1-1h12zM2 0a2 2 0 0 0-2 2v12.793a.5.5 0 0 0 .854.353l2.853-2.853A1 1 0 0 1 4.414 12H14a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2H2z" />
                                            <path d="M3 3.5a.5.5 0 0 1 .5-.5h9a.5.5 0 0 1 0 1h-9a.5.5 0 0 1-.5-.5zM3 6a.5.5 0 0 1 .5-.5h9a.5.5 0 0 1 0 1h-9A.5.5 0 0 1 3 6zm0 2.5a.5.5 0 0 1 .5-.5h5a.5.5 0 0 1 0 1h-5a.5.5 0 0 1-.5-.5z" />
                                        </svg>
                                        Messages
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link
                                                " href="~/customersale/Index" aria-controls="dashboard" aria-selected="false">
                                        <i class="fa fa-shopping-basket mr-15" aria-hidden="true"></i>
                                        Orders
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link
                                                " href="~/customersale/Index" aria-controls="dashboard" aria-selected="false">
                                        <i class="fa fa-shopping-basket mr-15" aria-hidden="true"></i>
                                        Cargo
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link
                                                " href="~/customeraddress/Index" aria-controls="dashboard" aria-selected="false">
                                        <i class="fa fa-map-marked mr-15" aria-hidden="true"></i>
                                        Address books
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link
                                                " href="#" aria-controls="dashboard" aria-selected="false">
                                        <i class="fas fa-heart mr-15" aria-hidden="true"></i>
                                        Wishlist
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link
                                               active " href="~/customerchgpass/Index" aria-controls="dashboard" aria-selected="false">
                                        <i class="fa fa-key mr-15" aria-hidden="true"></i>
                                        Change password
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link
                                                " href="https://wowy.botble.com/customer/logout" aria-controls="dashboard" aria-selected="false">
                                        <i class="fa fa-sign-out-alt mr-15" aria-hidden="true"></i>
                                        Logout
                                    </a>
                                </li>
                            </ul>
                        </div>
                    </div>
                    <div class="col-md-8">
                        <div class="tab-content dashboard-content">
                            <div class="tab-pane fade active show" id="dashboard" role="tabpanel" aria-labelledby="dashboard-tab">
                                <div class="card">
                                    <div class="card-header">
                                        <h5>Change password</h5>
                                    </div>
                                    <div class="card-body">
                                        <form method="POST" accept-charset="UTF-8">
                                            <input name="_token" type="hidden" value="rq84KmVlqzwIBbqOHQ4ykply1iwHHB8F9g3q5CJ8">
                                            <div class="form-group ">
                                                <label class="required" for="old_password">Current password:</label>
                                                <input required="" type="password" class="form-control square" name="customerpassold" id="old_password" placeholder="Current password">
                                            </div>
                                            <div class="form-group ">
                                                <label class="required" for="password">New password:</label>
                                                <input required="" type="password" class="form-control square" name="customerpass" id="password" placeholder="New password">
                                            </div>
                                            <div class="form-group ">
                                                <label class="required" for="password_confirmation">Password confirmation:</label>
                                                <input required="" type="password" class="form-control square" name="customerpass" id="password_confirmation" placeholder="Password confirmation">
                                            </div>
                                            <div class="col-md-12">
                                                <button type="submit" class="btn btn-fill-out submit">Change password</button>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

