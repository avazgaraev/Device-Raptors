@using WebApplication21.Models
@model List<basket>

@{
    ViewBag.Title = "basketcheck";
    Layout = "~/Shared/layoutviews.cshtml";
}

<table id="example" class="table table-striped table-bordered dt-responsive nowrap" style="width:100%">
    <thead>

        <tr>
            <th>Image</th>
            <th>Product</th>
            <th>Count</th>
            <th>Price</th>
            <th>All price</th>
        </tr>
    </thead>
    <tbody>

        @foreach (var item in Model)
        {
            <tr>
                <td><img src="@item.prodimg" style="width:300px" /></td>
                <td>@item.prodname</td>
                <td>@item.quantity</td>
                <td>@item.price</td>
                <td>@item.basketallprice</td>
                @*<td><a href="/Sales/saledetail/@item.saleid" class="btn btn-info"><i class="fas fa-info"></i></a></td>*@

            </tr>
        }
    </tbody>
</table>

<div id="smart-button-container">
    <div style="text-align: center;">
        <div id="paypal-button-container"></div>
    </div>
</div>

<a href="~/Customersale/addsale" class="btn btn-success" style="float:right">Submit</a>




