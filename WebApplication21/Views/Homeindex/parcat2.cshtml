@using WebApplication21.Models
@model List<subcategory>

<div class="sidebar-widget widget_categories mb-30 p-30 bg-grey border-radius-10">
    <div class="widget-header position-relative mb-20 pb-10">
        <h5 class="widget-title mb-10">Categories</h5>
        <div class="bt-1 border-color-1"></div>
    </div>
    <div>
        <ul class="categor-list">
            @foreach (var item in Model)
            {

                <li class="cat-item text-muted"><a href="/Homeindex/prodcat/@item.SubcategoryId">@item.SubcategoryName</a>@*@item.Productss.Where(x=>x.Categoryid==item.CategoryID).ToList().Count()*@</li>
            }
        </ul>
    </div>
</div>
