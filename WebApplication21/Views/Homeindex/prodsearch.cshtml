                    <div class="header-action-icon-2">
                        <a class="mini-cart-icon" href="~/basket/Index">
                            <img alt="wowy" src="~/Content/images/icons/icon-cart-white.svg">
                        </a>
                        @*<div class="cart-dropdown-wrap cart-dropdown-hm2">
