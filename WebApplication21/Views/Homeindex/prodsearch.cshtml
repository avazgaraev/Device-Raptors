</div>
    </header>
<section class="mt-60 mb-60">
    <div class="container">
        <div class="row">
            <div class="col-lg-3 primary-sidebar sticky-sidebar">
            </div>
            <div class="col-lg-9">
                <div class="row">
                    @foreach (var item in Model)
                    {
                        <div class="col-lg-4 col-md-4">
                            <div class="product-cart-wrap mb-30">
                                <div class="product-img-action-wrap">
                                    <div class="product-img product-img-zoom">
                                        <a href="~/productview/Index/@item.productsid">
                                            <img class="default-img" src="@item.productimg" alt="Smart Home Speaker">
                                            <img class="hover-img" src="@item.productimg" alt="Smart Home Speaker">
                                        </a>
                                    </div>

                                    <div class="product-badges product-badges-position product-badges-mrg">
                                    </div>
                                </div>
                                <div class="product-content-wrap">
                                    <div class="product-category">
                                        <a href="~/Homeindex/prodcat/@item.Categoryid">@item.Categoryname</a>
                                    </div>
                                    <h2><a href="~/productview/Index/@item.productsid">@item.productsname</a></h2>

                                    <div class="product-price">
                                        <span>$@item.productndprice</span>
                                    </div>
                                    <div class="product-action-1 show">
                                        <a href="~/basket/addbasket/@item.productsid">Add to basket</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
                @Html.PagedListPager((IPagedList)Model, pages => Url.Action("prodsearch", new { pages })
                , new PagedListRenderOptions { LiElementClasses = new List<string> { "page-link" } })
            </div>
        </div>
    </div>
</section>

