@model WebApplication21.Models.sliders

@{
    ViewBag.Title = "addslider";
    Layout = "~/Shared/_LayoutAdmin.cshtml";
}


<form class="form-group" method="post">

    @Html.LabelFor(x => x.sliderimg)
    @Html.TextBoxFor(x => x.sliderimg, new { @class = "form-control mb-2" })



    @Html.LabelFor(x => x.sliderheader)
    @Html.TextBoxFor(x => x.sliderheader, new { @class = "form-control mb-2" })


    @Html.LabelFor(x => x.slidertoprod)
    @Html.TextBoxFor(x => x.slidertoprod, new { @class = "form-control mb-2" })


    @Html.LabelFor(x => x.sliderdiscabout)
    @Html.TextBoxFor(x => x.sliderdiscabout, new { @class = "form-control mb-2" })


    <button class="btn btn-primary">Submit</button>
</form>



