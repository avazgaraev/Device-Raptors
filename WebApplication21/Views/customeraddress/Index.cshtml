@using WebApplication21.Models
@model List<customer>

@{
    ViewBag.Title = "Index";
    Layout = "~/Shared/layoutviews.cshtml";
}

<section class="pt-150 pb-150">
    <div class="container">
        <div class="row">
            <div class="col-lg-10 m-auto">
                <div class="row">
                    <div class="col-md-4">
                        <div class="row">
                            
                            <div class="col-8">
                                <div class="profile-usertitle-name pt-2">
                                    @foreach (var item in Model)
                                    {

                                        <strong>@item.customername @item.customersurname</strong>
                                        <p><small>@HttpContext.Current.User.Identity.Name</small></p>
                                    }
                                </div>
                            </div>
                        </div>
                        <hr>
                        <div class="dashboard-menu">
                            <ul class="nav flex-column">
                                <li class="nav-item">
                                    <a class="nav-link
                                                  " href="~/customerpanel/Index" aria-controls="dashboard" aria-selected="false">
                                        <i class="fa fa-atom mr-15" aria-hidden="true"></i>
                                        Overview
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link
                                                " href="~/customerprof/Index" aria-controls="dashboard" aria-selected="false">
                                        <i class="fa fa-user-edit mr-15" aria-hidden="true"></i>
                                        Profile
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link
                                                " href="~/customermessage/Index" aria-controls="dashboard" aria-selected="false">

                                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-chat-left-text mr-15" viewBox="0 0 16 16">
                                            <path d="M14 1a1 1 0 0 1 1 1v8a1 1 0 0 1-1 1H4.414A2 2 0 0 0 3 11.586l-2 2V2a1 1 0 0 1 1-1h12zM2 0a2 2 0 0 0-2 2v12.793a.5.5 0 0 0 .854.353l2.853-2.853A1 1 0 0 1 4.414 12H14a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2H2z" />
                                            <path d="M3 3.5a.5.5 0 0 1 .5-.5h9a.5.5 0 0 1 0 1h-9a.5.5 0 0 1-.5-.5zM3 6a.5.5 0 0 1 .5-.5h9a.5.5 0 0 1 0 1h-9A.5.5 0 0 1 3 6zm0 2.5a.5.5 0 0 1 .5-.5h5a.5.5 0 0 1 0 1h-5a.5.5 0 0 1-.5-.5z" />
                                        </svg>
                                        Messages
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link
                                                " href="~/customersale/Index" aria-controls="dashboard" aria-selected="false">
                                        <i class="fa fa-shopping-basket mr-15" aria-hidden="true"></i>
                                        Orders
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link
                                                " href="~/customersale/Index" aria-controls="dashboard" aria-selected="false">
                                        <i class="fa fa-shopping-basket mr-15" aria-hidden="true"></i>
                                        Cargo
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link
                                               active " href="~/customeraddress/Index" aria-controls="dashboard" aria-selected="false">
                                        <i class="fa fa-map-marked mr-15" aria-hidden="true"></i>
                                        Address books
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link
                                                " href="#" aria-controls="dashboard" aria-selected="false">
                                        <i class="fas fa-heart mr-15" aria-hidden="true"></i>
                                        Wishlist
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link
                                                " href="~/customerchgpass/Index" aria-controls="dashboard" aria-selected="false">
                                        <i class="fa fa-key mr-15" aria-hidden="true"></i>
                                        Change password
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link
                                                " href="~/logout/Index" aria-controls="dashboard" aria-selected="false">
                                        <i class="fa fa-sign-out-alt mr-15" aria-hidden="true"></i>
                                        Logout
                                    </a>
                                </li>
                            </ul>
                        </div>
                    </div>
                    <div class="col-md-8">
                        <div class="tab-content dashboard-content">
                            <div class="tab-pane fade active show" id="dashboard" role="tabpanel" aria-labelledby="dashboard-tab">
                                <div class="row">
                                    @foreach (var item in Model)
                                    {
                                        if (item.customeraddress == "")
                                        {

                                            <div class="col-12">
                                                <div class="alert alert-dark d-flex align-items-center" role="alert">
                                                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor" class="bi bi-exclamation-triangle-fill flex-shrink-0 me-2" viewBox="0 0 16 16" role="img" aria-label="Info:">
                                                        <path d="M8 16A8 8 0 1 0 8 0a8 8 0 0 0 0 16zm.93-9.412-1 4.705c-.07.34.029.533.304.533.194 0 .487-.07.686-.246l-.088.416c-.287.346-.92.598-1.465.598-.703 0-1.002-.422-.808-1.319l.738-3.468c.064-.293.006-.399-.287-.47l-.451-.081.082-.381 2.29-.287zM8 5.5a1 1 0 1 1 0-2 1 1 0 0 1 0 2z"></path>
                                                    </svg>
                                                    <div>You don't have an address book, you can create it <a href="~/customeraddress/addaddress">here</a></div>
                                                </div>
                                            </div>
                                        }
                                        else
                                        {
                                            <div class="col-12">
                                                <h1>@item.customeraddress</h1> 
                                                    
                                            </div>
                                        }
                                    }
                                    <div class="col-12 m-2">
                                        <a class="add-address" href="/customeraddress/addaddress/">
                                            <i class="fa fa-plus"></i>
                                            <span>Add a new address</span>
                                        </a>
                                    </div>
                                </div>
                                <div class="modal fade" id="confirm-delete-modal" tabindex="-1" role="dialog" aria-hidden="true">
                                    <div class="modal-dialog modal-xs">
                                        <div class="modal-content">
                                            <div class="modal-header">
                                                <h4 class="modal-title"><strong>Confirm delete</strong></h4>
                                                <button type="button" class="btn-close" data-dismiss="modal" aria-label="Close"></button>
                                            </div>
                                            <div class="modal-body">
                                                <p>Do you really want to delete this address?</p>
                                            </div>
                                            <div class="modal-footer">
                                                <button class="btn btn-small btn-secondary" type="button" data-dismiss="modal">Cancel</button>
                                                <button class="btn btn-small btn-danger btn-confirm-delete" type="submit">Delete</button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

